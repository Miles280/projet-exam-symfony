{% extends 'base.html.twig' %}

{% block title %}New Role{% endblock %}

{% block body %}
<h1>Create new Role</h1>

{{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.camp) }}
    {{ form_row(form.goal) }}
    {{ form_row(form.description) }}
    {{ form_row(form.minPlayer) }}

    <h2>Pouvoirs</h2>
    <div data-collection-holder>
        {% for powerForm in form.powers %}
            <div class="power-form" style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
                {{ form_row(powerForm.title) }}
                {{ form_row(powerForm.description) }}
                {{ form_row(powerForm.position) }}
            </div>
        {% else %}
            <p>Aucun pouvoir pour le moment.</p>
        {% endfor %}
    </div>

    <button class="btn btn-primary">Save</button>

{{ form_end(form) }}

<a href="{{ path('app_role_index') }}">back to list</a>


{% endblock %}
